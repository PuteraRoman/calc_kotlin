<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:textColor="@color/white"
        android:layout_gravity="end"
        android:gravity="bottom|end"
        android:ellipsize="end"
        android:textSize="40sp"
        android:singleLine="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_margin="5dp"
        >

        <LinearLayout
            style="@style/Layer"

            >



            <Button
               style="@style/Button"
                android:id="@+id/button_AC"
                android:text="AC"
                android:backgroundTint="#bdb9b9"
                android:textColor="@color/black">
            </Button>
            <Button
                style="@style/Button"
                android:id="@+id/button_plus_minus"
                android:backgroundTint="#bdb9b9"
                android:textColor="@color/black"
                android:text="+/-">
            </Button>
            <Button
                style="@style/Button"
                android:id="@+id/button_procent"
                android:backgroundTint="#bdb9b9"
                android:text="%"
                android:textColor="@color/black">
            </Button>
            <Button
                style="@style/Button"
                android:id="@+id/button_division"
                android:text="/"
                android:backgroundTint="#faa107"
                android:textColor="@color/white">
            </Button>

        </LinearLayout>

        <LinearLayout
            style="@style/Layer"

            >
            <Button
                style="@style/Button"
                android:id="@+id/button_7"
                android:text="7"
                android:backgroundTint="#33312a"
                android:textColor="@color/white">

            </Button>
            <Button
                style="@style/Button"
                android:id="@+id/button_8"
                android:text="8"
                android:backgroundTint="#33312a"
                android:textColor="@color/white">

            </Button>
            <Button
                style="@style/Button"
                android:id="@+id/button_9"
                android:text="9"
                android:backgroundTint="#33312a"
                android:textColor="@color/white">

            </Button>
            <Button
                style="@style/Button"
                android:id="@+id/button_multiplication"
                android:text="X"
                android:backgroundTint="#faa107"
                android:textColor="@color/white">

            </Button>

        </LinearLayout>

        <LinearLayout
            style="@style/Layer"

            >

            <Button
                style="@style/Button"
                android:id="@+id/button_4"
                android:text="4"
                android:backgroundTint="#33312a"
                android:textColor="@color/white">

            </Button>
            <Button
                style="@style/Button"
                android:id="@+id/button_5"
                android:text="5"
                android:backgroundTint="#33312a"
                android:textColor="@color/white">

            </Button>
            <Button
                style="@style/Button"
                android:id="@+id/button_6"
                android:text="6"
                android:backgroundTint="#33312a"
                android:textColor="@color/white">

            </Button>

            <Button
                style="@style/Button"
                android:id="@+id/button_minus"
                android:backgroundTint="#faa107"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="32dp">

            </Button>

        </LinearLayout>

        <LinearLayout
            style="@style/Layer"
            >

            <Button
                style="@style/Button"
                android:id="@+id/button_1"
                android:text="1"
                android:backgroundTint="#33312a"
                android:textColor="@color/white">

            </Button>
            <Button
                style="@style/Button"
                android:id="@+id/button_2"
                android:text="2"
                android:backgroundTint="#33312a"
                android:textColor="@color/white">

            </Button>
            <Button
                style="@style/Button"
                android:id="@+id/button_3"
                android:text="3"
                android:backgroundTint="#33312a"
                android:textColor="@color/white">

            </Button>
            <Button
                style="@style/Button"
                android:id="@+id/button_plus"
                android:text="+"
                android:backgroundTint="#faa107"
                android:textColor="@color/white">

            </Button>

        </LinearLayout>

        <LinearLayout
            style="@style/Layer">
            <Button
                style="@style/Button"
                android:layout_width="155dp"
                android:id="@+id/button_0"
                android:layout_height="65dp"
                android:text="0"
                android:backgroundTint="#33312a"
                android:textColor="@color/white">


            </Button>

            <Button
                style="@style/Button"
                android:id="@+id/button_coma"
                android:text=","
                android:backgroundTint="#33312a"
                android:textColor="@color/white">
            </Button>
            <Button
                style="@style/Button"
                android:id="@+id/button_equal_sign"
                android:text="="
                android:backgroundTint="#faa107"
                android:textColor="@color/white">

            </Button>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>